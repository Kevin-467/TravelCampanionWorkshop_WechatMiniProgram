/* pages/home/home.wxss */
.wrapper {
  margin:0 auto
}

.homePage_slider {
    height: 350rpx;
}

.homePage_slider image {
  position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.5);
    left: 0;
    top: 0;
}

.functionArea .title {
  margin-top: 10rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.functionArea .bd {
  width: 80vw;
  min-height: 12vh;
  margin: 10rpx auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: pink;
  border-radius: 10rpx;
}

.functionArea .bd view {
  display: flex;
  width: 120rpx;
  height: 120rpx;
  flex-direction: column; /* 使图片和文字竖直排列 */
  align-items: center; /* 水平居中 */
  text-align: center;
  border: 1px solid #000;
}

.functionArea .bd image {
  width: 40rpx;  /* 控制图片大小 */
  height: 40rpx;  /* 保持图片的宽高比例 */
  margin-bottom: 10rpx;  /* 图片和文本之间的间距 */
}

.functionArea .bd a {
  color: #333;
  text-decoration: none;
  font-size: 28rpx;
}




