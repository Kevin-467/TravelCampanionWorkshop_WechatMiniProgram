/* pages/home/home.wxss */
.wrapper {
  margin:0 auto
}

.homePage_slider {
    height: 350rpx;
}

.homePage_slider image {
  position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.5);
    left: 0;
    top: 0;
}

.title {
  margin:10px auto;
  width:95vw;
  height:3vh;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border:1px solid #999;
  border-radius: 1.5vh;
}

.common-func .bd {
  width: 100%;
  min-height: 12vh;
  margin: 10rpx auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 10rpx;
}

.common-func .bd > view {
  display: flex;
  padding: 10rpx;
  width: 130rpx;
  height: 120rpx;
  flex-direction: column; /* 使图片和文字竖直排列 */
  align-items: center; /* 水平居中 */
  text-align: center;
  background-color:#faebd7;
  border: 1px solid #000;
  border-radius: 10rpx;
}

.common-func .bd navigator {
  color: #333;
  text-decoration: none;
  font-size: 30rpx;
}

.common-func .bd image {
  margin-bottom: 10rpx; 
  width: 60%;  
  height: 80%;  
}

.news .bd view{
  width: 100vw;
  height: 15vh;
  border: 1px solid #999;
  border-left:0;
  border-right:0;
}

.news .bd navigator {
  display: flex;
}






