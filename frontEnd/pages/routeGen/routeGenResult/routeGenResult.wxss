.page-title {
  margin: 10rpx;
  height: 25px;
  text-align: center;
  line-height: 25px;
  font-size: 20px;
  border: 1px solid #999;
  border-radius: 12.5px;
}

.tip {
  margin: 5px 0;
  line-height: 30px;
  font-size: 15px;
  color: #999;
  text-align: center;
}

.dash-hr {
  height: 2px;
  background-image: repeating-linear-gradient(
    to right,
    #999,
    #999 4px,
    transparent 8px
  );
  margin: 10px 0;
}

.route-res {
  margin: 5px;
  font-size: 20px;
  color: #999;
}

.route-res .header {
  height: 25px;
  line-height: 25px;
  font-weight: bold;
}

.route-res .bd {
  margin-top: 5px;
  word-wrap: break-word;
  font-size: 19px;
  color: #333;
}

.card {
  padding: 5px;
  border:1px solid #999;
  border-left: 0;
  border-right:0;
}

.card .title {
  line-height: 30px;
}

.card .describe {
  font-size: 14px;
  padding: 5px;
  color:#999;
}

.route-res .empty-box {
  height:25vh;
  text-align: center;
  line-height: 25vh;
  font-size: 25px;
  font-weight: bold;
  background-color: #f9f9f9;
  border:1px solid #999;
  border-radius:10px;
}
