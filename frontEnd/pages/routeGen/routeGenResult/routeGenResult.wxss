.page-title {
  margin: 10rpx;
  padding: 10rpx 0;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 40rpx;
  border: 2rpx solid #999;
  border-radius: 25rpx;
}

.tip {
  margin: 10rpx 0;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
  text-align: center;
}

.dash-hr {
  height: 5rpx;
  background-image: repeating-linear-gradient(
    to right,
    #999,
    #999 10rpx,
    transparent 20rpx
  );
  margin: 10rpx 0;
}

.route-res {
  margin: 10rpx;
  font-size: 45rpx;
  color: #999;
}

.route-res .header {
  height: 50rpx;
  line-height: 50rpx;
  font-weight: bold;
}

.route-res .bd {
  margin-top: 12.5rpx;
  word-wrap: break-word;
  font-size: 38rpx;
  color: #333;
}

.card {
  padding: 12.5rpx;
  border:2rpx solid #999;
  border-left: 0;
  border-right:0;
}

.card .title {
  line-height: 75rpx;
}

.card .describe {
  font-size: 35rpx;
  padding: 10rpx;
  color:#999;
}

.route-res .empty-box {
  height:25vh;
  text-align: center;
  line-height: 25vh;
  font-size: 50rpx;
  font-weight: bold;
  background-color: #f9f9f9;
  border:2rpx solid #999;
  border-radius:25rpx;
}
