.page-title {
    margin: 10rpx;
    padding:5rpx 0;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 40rpx;
    border: 2rpx solid #999;
    border-radius: 25rpx;
}

.tip {
    font-size: 30rpx;
    color: #999;
    text-align: center;
}

.container {
    padding: 10rpx;
}

.form-item {
    margin: 20rpx 0;
}

.form-item .label {
    font-size: 35rpx;
    color:#636363;
}

.input-box {
    margin-top: 10rpx;
    width: 96%;
    padding: 10rpx;
    border: 2rpx solid #999;
    border-radius: 10rpx;
}

.value-show {
    align-items: center;
    font-size: 32rpx;
    color: #999;
    margin-top: 20rpx;
}

.value-show text {
    color:#333;
    font-weight: bold;
}

.slider-box {
    width: 90%;
    margin: 25rpx auto;
}

.btn-set {
    display: flex;
    justify-content: space-between;
}

.btn-set button {
    margin-top: 10rpx;    
    padding: 10rpx 10rpx;
    color: white;
    border-radius: 15rpx;
    width: 300rpx;
}

.submit-btn {
    background-color: #4CAF50;
}

.reset-btn {
    background-color: #f44336;
}