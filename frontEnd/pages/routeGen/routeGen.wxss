.button {
    padding: 10px 20px;
    margin-top: 10px;
}

.page-title {
    margin: 10rpx;
    height: 50rpx;
    text-align: center;
    font-size: 40rpx;
    border: 1px solid #999;
    border-radius: 25rpx;
}

.tip {
    font-size: 30rpx;
    color: #999;
    text-align: center; /* 文字居中 */
    position: relative; 
}

.tip::before,
.tip::after {
    content: "-";
    position: absolute;
    top: 0;
    bottom: 0;
    width: 50%;
    font-size: 30rpx; 
}

.tip::before {
    left: 0;
    text-align: left;
}

.tip::after {
    right: 0;
    text-align: right;
}


.container {
    padding: 20rpx;
} 

.form-item {
    margin-bottom: 20rpx;
    padding: 10rpx 0;
}

.input-box {
    width: 95%;
    padding: 10rpx;
    border: 1px solid #999;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.date-picker {
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
  
.date-selector {
    padding: 10px;
    margin-right: 10px; /* 给两个选择器之间增加间距 */
    border: 1px solid #ccc;
    border-radius: 5px;
    text-align: center;
    background-color: #f5f5f5;
}

.separator {
    margin: 0 10px;
    font-size: 18px;
    color: #333;
}

.btn-set {
    display: flex;
    justify-content:space-between;
}

.btn-set button {
    width: 40vw;
}

.submit-btn {
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
}

.reset-btn {
    background-color: #f44336;
    color: white;
    border: none;
    border-radius: 5px;
}