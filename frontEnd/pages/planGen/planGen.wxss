.survey-contanier {
    padding: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f3f4f6;
    min-height: 100vh;
  }
  
  /* 标题样式 */
  .survey-title {
    font-size: 22px;
    font-weight: bold;
    margin: 20px 0;
    color: #333;
    text-align: center;
  }
  
  /* 问题卡片样式 */
  .question-card {
    width: 100%;
    background: #ffffff;
    padding: 16px;
    margin: 12px 0;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .question {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin-bottom: 8px;
  }
  
  /* 输入样式 */
  .input-text {
    width: 100%;
    height: 80px;
    border: 1px solid #ddd;
    border-radius: 8px;
    margin-top: 10px;
    padding: 10px;
  }
  
  .radio-group, .checkbox-group {
    margin-top: 10px;
  }
  
  .radio-label, .checkbox-label {
    display: block;
    padding: 8px;
    background: #f9f9f9;
    margin: 4px 0;
    border-radius: 8px;
    cursor: pointer;
  }
  
  .slider {
    margin: 12px 0;
  }
  
  /* 进度条样式 */
  .progress-bar {
    width: 100%;
    margin: 16px 0;
    color: #666;
    text-align: center;
  }
  
  /* 提交按钮样式 */
  .submit-button {
    margin-top: 20px;
    width: 90%;
    background-color: #007aff;
    color: white;
    padding: 14px;
    border-radius: 12px;
    text-align: center;
    font-size: 16px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    transition: all 0.2s ease;
  }
  
  .submit-button:active {
    background-color: #005bbb;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }